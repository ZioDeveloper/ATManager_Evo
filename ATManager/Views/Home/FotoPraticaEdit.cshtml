@model ATManager.Models.HomeModel
@{
    /**/

    ViewBag.Title = "FotoPratica";
}
<h2>Foto legate alla pratica</h2>
<br />
<br />
@using (Html.BeginForm("UploadFotoPraticaEdit", "Home", new
{
    ID = ViewBag.IDPerizia,
    ViewBag.marca,
    ViewBag.targa,
    ViewBag.dataimmatricolazione,
    ViewBag.km,
    ViewBag.luogoperizia,
    ViewBag.modello,
    ViewBag.cartacircolazione,
    ViewBag.matricola,
    ViewBag.telaio,
    ViewBag.dataultimarevisione,
    ViewBag.aziendautilizzatrice,
    ViewBag.blocked
}, FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    <div class="form-group">
        <div class="col-md-10">
            Tipo documento :
            @Html.DropDownList("SDU_DocTipi", null, htmlAttributes: new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <label for="file">Upload Image:</label>
        <input type="file" name="files[0]" id="files_0" />
        <br />
        <input type="submit" value="UploadFotoPraticaEdit" class="submit" />
    </div>
}
