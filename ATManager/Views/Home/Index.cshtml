
@{
    ViewBag.Title = "Index";
}

<h2>AT Manager</h2>


@using (Html.BeginForm("DoRefresh", "Home", FormMethod.Get))
{
<div class="form-horizontal">
    @{var Scelta01 = "Tutti    :";}
    @{var Scelta02 = "Da fare  :";}
    @{var Scelta03 = "Schede aperte :";}
    @{var Scelta04 = "Schede chiuse    :";}



    <table border="0">
        <tr>
            <td >@Scelta01 &nbsp;</td>

