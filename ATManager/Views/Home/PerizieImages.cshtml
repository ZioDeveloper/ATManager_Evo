@model IEnumerable<ATManager.Models.SDU_DocumentiPerizia>


@{
    ViewBag.Title = "Images";
}

<h2>Images</h2>

@Html.ActionLink("Torna alla lista", "DoRefresh")
<br />
<br />

@foreach (var item in Model)
{

    <table>
        <tr>
            <td>
                <img src="@Url.Content("~/FotoPerizia/" + item.PercorsoFile)" title="@Url.Content(item.PercorsoFile)" alt="Image" style='height: 400px; width: 400px; object-fit: contain' />
                <p>-</p>

             </td>



             <td>
                @Html.ActionLink("Delete Foto", "DeleteSingleFotoPerizia", new { id = item.ID,  picName = item.PercorsoFile, IDPerizia = item.ID_Perizia }, new { @class = "deleteImg" })
            </td>
        </tr>
    </table>

}

